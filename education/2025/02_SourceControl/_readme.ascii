git config --global user.name "Your Name"
git config --global user.email "your.email@example.com"
git config --list

                          ┌─────────────────┐
                          │  Working Dir    │
                          │ (your files)    │
                          └─────────────────┘
                                  │
                               git init
                                  │
                              git status
                                  │
                ┌─────────────────┴──────────────────┐
                │                                    │
        (new/changed file)                   (untracked file)
                │                                    │
                ▼                                    ▼
        ┌────────────────┐                  ┌─────────────────┐
        │ Modified state │                  │ Untracked state │
        └────────────────┘                  └─────────────────┘
                │                                    │
                └───────────────┐   ┌────────────────┘
                                ▼   ▼
                        git add <folder(s)/|file(s)|.>  : Tracks
                        git rm <file|-r folder(s)>      : Delete from disk
                        git mv <old> <new>              : Rename
                                  │
                                  ▼
                         ┌──────────────────┐
                         │  Staging Area    │ ← also called "Index"
                         │                  │ Undo: git restore --staged <folder(s)/file(s)>
                         └──────────────────┘
                                  │
                        git commit -m "msg"
                                  │
                                  ▼
                         ┌──────────────────┐ Undo commit:
                         │ Local Repository │      staged: git reset --soft <commit-hash> (HEAD~1)
                         │  (.git/ objects) │   un-staged: git reset --mixed <commit-hash> (HEAD~1)
                         └──────────────────┘     discard: git reset --hard <commit-hash> (HEAD~1)
                                  │
                         ┌──────────────────┐  git remote add origin https://github.com/username/repo.git
                         │ Configure Remote │  git remote -v
                         └──────────────────┘  git remote set-url origin https://github.com/username/new-repo.git
                                  │
                        git push -u origin main (git push)
                                  │
                                  ▼
                         ┌──────────────────┐ Undo:
                         │ Remote Repository│  New commit: git revert <commit-hash>
                         │ (e.g. GitHub)    │
                         └──────────────────┘
